<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.linksofficial.links.viewmodel.FeedVM" />

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8">

                <FrameLayout
                    android:id="@+id/frame_profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_profile_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="start"
                        android:src="@drawable/ic_icon_links"
                        app:putImage="@{vm.postItem.user_photo_url}" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/lato_regular"
                    android:maxLength="18"
                    android:text="@{vm.postItem.user_name}"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/frame_profile_image"
                    app:layout_constraintStart_toEndOf="@id/frame_profile_image"
                    app:layout_constraintTop_toTopOf="@id/frame_profile_image"
                    tools:text="Harish. VS" />


                <TextView
                    android:id="@+id/tv_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_24"
                    android:clickable="true"
                    android:fontFamily="@font/lato_regular"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="@{vm.postItem.tag}"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@id/frame_profile_image"
                    app:layout_constraintStart_toEndOf="@id/tv_username"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Technology" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:text="Today"
                    android:textColor="#817373"
                    android:textSize="9sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/frame_profile_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/iv_thumb_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:visibility="visible"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/guideline2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/iv_thumbnail"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="centerCrop"
                            android:src="#dddddd" />

                    </androidx.cardview.widget.CardView>

                </com.facebook.shimmer.ShimmerFrameLayout>


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/lato_bold"
                    android:freezesText="true"
                    android:gravity="start"
                    android:maxLines="2"
                    android:scrollHorizontally="true"
                    android:singleLine="false"
                    android:text="@{vm.postItem.title}"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/iv_thumb_shimmer"
                    app:layout_constraintTop_toBottomOf="@+id/iv_thumb_shimmer"
                    tools:text="Do your personal mobile apps steal data from you, with or without your permission?" />

                <!--                </LinearLayout>-->

                <TextView
                    android:id="@+id/tv_link"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/lato_regular"
                    android:freezesText="true"
                    android:gravity="start"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:singleLine="false"
                    android:text="@{vm.postItem.link}"
                    android:textColor="#014780"
                    android:textSize="9sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    app:layout_constraintVertical_bias="0.1"
                    tools:text="https://medium.com/techvile/do-your-personal-mobile-apps-steal-data-from-you-with-or-without-your-consent-7a8bf3ab0c62" />


                <TextView
                    android:id="@+id/tv_caption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="start"
                    android:maxLength="240"
                    android:text="@{vm.postItem.caption}"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:visibility="@{vm.postItem.caption==null || vm.postItem.caption==`` ? View.GONE:View.VISIBLE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_link"
                    tools:text="@string/loremIpsum"
                    tools:visibility="visible" />

                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="3dp"
                    android:background="#DDDDDD"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@id/tv_caption" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp"
                    app:layout_constraintTop_toBottomOf="@id/separator">

                    <FrameLayout
                        android:id="@+id/frame_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableStart="@drawable/ic_save_link"
                            android:drawableLeft="@drawable/ic_save_link"
                            android:drawablePadding="6dp"
                            android:fontFamily="@font/muli"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:text="Save Link"
                            android:textColor="@color/primaryColor"
                            android:textStyle="bold" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/frame_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:drawableStart="@drawable/ic_file_copy"
                            android:drawableLeft="@drawable/ic_file_copy"
                            android:drawablePadding="6dp"
                            android:fontFamily="@font/muli"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:text="Copy Link"
                            android:textColor="@color/primaryColor"
                            android:textStyle="bold" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/frame_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableStart="@drawable/ic_share"
                            android:drawableLeft="@drawable/ic_share"
                            android:drawablePadding="6dp"
                            android:fontFamily="@font/muli"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:text="Share"
                            android:textColor="@color/primaryColor"
                            android:textStyle="bold" />

                    </FrameLayout>

                </LinearLayout>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>