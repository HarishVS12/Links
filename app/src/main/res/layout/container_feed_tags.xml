<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.linksofficial.links.viewmodel.AddPostVM" />

        <import type="android.view.View" />

    </data>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <FrameLayout
            android:id="@+id/card_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            tools:backgroundTint="@color/white"
            android:backgroundTint="@color/color_feed_bg_selector"
            android:background="@drawable/ic_background_feed"
            android:clickable="true">

            <!--            android:onClick="@{(v) -> vm.selected(v)}"-->

            <TextView
                android:id="@+id/tv_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:fontFamily="@font/lato_regular"
                android:paddingHorizontal="4dp"
                android:paddingVertical="10dp"
                android:text="Technology"
                tools:textColor="@color/black"
                android:textColor="@color/color_feed_text_selector"
                android:textSize="12sp"
                android:textStyle="bold" />

        </FrameLayout>

    </FrameLayout>

</layout>
