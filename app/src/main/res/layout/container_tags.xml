<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.linksofficial.links.viewmodel.SelectTagVM" />

        <import type="android.view.View" />

    </data>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <FrameLayout
            android:id="@+id/card_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/ic_background_alter"
            android:clickable="true">

<!--            android:onClick="@{(v) -> vm.selected(v)}"-->

            <TextView
                android:id="@+id/tv_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:fontFamily="@font/lato_regular"
                android:paddingHorizontal="@dimen/margin_16"
                android:paddingVertical="12dp"
                android:text="Technology"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </FrameLayout>

        <ImageView
            android:id="@+id/iv_selected"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:elevation="10dp"
            android:src="@drawable/ic_selected"
            android:visibility="@{vm.selectTag.selected? View.VISIBLE: View.INVISIBLE}" />

    </FrameLayout>

</layout>
