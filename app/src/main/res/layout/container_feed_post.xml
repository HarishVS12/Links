<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.linksofficial.links.viewmodel.FeedVM" />

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="@dimen/margin_8">

                <FrameLayout
                    android:id="@+id/frame_profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_profile_image"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="start"
                        app:putImage="@{vm.postItem.user_photo_url}" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/lato_regular"
                    android:maxLength="18"
                    android:text="@{vm.postItem.user_name}"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/frame_profile_image"
                    app:layout_constraintStart_toEndOf="@id/frame_profile_image"
                    app:layout_constraintTop_toTopOf="@id/frame_profile_image" />

                <FrameLayout
                    android:id="@+id/card_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_24"
                    android:background="@drawable/ic_background_feed"
                    android:clickable="true"
                    app:layout_constraintBottom_toBottomOf="@id/frame_profile_image"
                    app:layout_constraintStart_toEndOf="@id/tv_username"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_tags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:fontFamily="@font/lato_regular"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="@{vm.postItem.tag}"
                        android:textColor="@color/black"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:text="Today"
                    android:textColor="#817373"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/frame_profile_image"
                    app:layout_constraintEnd_toStartOf="@+id/iv_options"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toEndOf="@+id/card_tag"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_options"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_options"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/iv_thumb_shimmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frame_profile_image">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_8"
                        app:cardCornerRadius="6dp">


                        <ImageView
                            android:id="@+id/iv_thumbnail"
                            android:layout_width="110dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:src="#dddddd" />

                    </androidx.cardview.widget.CardView>

                </com.facebook.shimmer.ShimmerFrameLayout>


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/lato_bold"
                    android:freezesText="true"
                    android:gravity="start"
                    android:maxLines="2"
                    android:scrollHorizontally="true"
                    android:singleLine="false"
                    android:text="@{vm.postItem.title}"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_thumb_shimmer"
                    app:layout_constraintTop_toTopOf="@+id/iv_thumb_shimmer" />

                <!--                </LinearLayout>-->

                <TextView
                    android:id="@+id/tv_link"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/lato_regular"
                    android:freezesText="true"
                    android:gravity="start"
                    android:maxLines="2"
                    android:scrollHorizontally="true"
                    android:singleLine="false"
                    android:text="@{vm.postItem.link}"
                    android:textColor="@color/primaryColor"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_thumb_shimmer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_thumb_shimmer"
                    app:layout_constraintTop_toBottomOf="@id/tv_title" />


                <TextView
                    android:id="@+id/tv_caption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="start"
                    android:maxLength="160"
                    android:text="@{vm.postItem.caption}"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:visibility="@{vm.postItem.caption==null || vm.postItem.caption==`` ? View.GONE:View.VISIBLE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_thumb_shimmer"
                    tools:text="asdihasdhasasldasld"
                    tools:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="@dimen/margin_24"
                    android:layout_height="@dimen/margin_24"
                    android:layout_marginTop="@dimen/margin_8"
                    android:src="@drawable/ic_like_outline"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_caption" />

                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="@dimen/margin_24"
                    android:layout_height="@dimen/margin_24"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="0"
                    android:textColor="@color/black"
                    android:visibility="visible"
                    app:layout_constraintStart_toEndOf="@id/iv_like"
                    app:layout_constraintTop_toTopOf="@id/iv_like" />

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="@dimen/margin_24"
                    android:layout_height="@dimen/margin_24"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:src="@drawable/ic_whatsapp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_caption" />

                <!--
                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintGuide_percent="0.6653226" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintGuide_begin="39dp" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintGuide_begin="216dp" />

                -->

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>